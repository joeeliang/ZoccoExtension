{
  "manifest_version": 3,
  "name": "Word Bolder",
  "version": "1.0",
  "description": "Bold the first characters of words on webpages.",
  "permissions": ["activeTab"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}
